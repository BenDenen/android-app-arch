<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/request_coarse_location_permission_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request coarse location permission" />

    <Button
        android:id="@+id/request_accounts_permission_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request accounts permission" />

    <Button
        android:id="@+id/request_multiple_permissions_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request multiple permissions at once" />

</LinearLayout>
